extends layout
    
block content
    h1 Sign in to Steaming
    p Welcome back! I am surpised you are here.
    - if (typeof error != "undefined") {
        p        
            span(style="color: red")=error
    - }         
    form(action="/sign/in", method="post")
        p
            label(for="username") Desired Username
            br
            input(type="text", name="username", placeholder="e.g. chicken_nugget_lover21", autofocus)
        p            
            label(for="password") Password
            br
            input#password.form-control(type="password", name="password", placeholder="e.g. ********")
        p                             
            button.btn.btn-default(type="submit") Sign in
        p                          
            small or 
            a(href="/sign/up") Sign up
        p
            a(href="/") &#171; Steamers